{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023", // 适配 Node.js 20+ 版本（比 esnext 更具体）
    "lib": ["ES2023"], // 仅 Node 环境的 ES 库（排除 DOM）
    "module": "ESNext",
    "moduleResolution": "bundler", // 适配 Vite/Rolldown 打包器（替代原有 node 模式）
    "types": ["node"], // 仅 Node 类型（避免污染浏览器环境）
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Node 端构建配置专属选项
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true, // 不生成 JS 文件（Vite 直接解析 ts 配置）
    
    // 严格检查（和 app 端保持一致）
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts",
    "eslint.config.ts",
    "uno.config.ts" // 仅包含 Node 端的工具配置文件
  ],
  "exclude": ["node_modules", "dist"]
}